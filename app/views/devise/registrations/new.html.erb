
<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">注册</h4>
        </div>
        <div class="modal-body">
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email, '邮箱' %>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: '邮箱'  %>
          </div>
          <div class="form-group">
            <%= f.label :password, '密码' %>
            <% if @minimum_password_length %>
                <em>(至少 <%= @minimum_password_length %> 个字符)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '密码' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, '确认密码' %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: '确认密码'  %>
          </div>
        </div>
        <div class="modal-footer">
          <%= link_to '登陆', new_user_session_path, class: 'btn btn-info', role: 'button' %>
          <%= f.submit "注册", class: 'btn btn-primary' %>
        </div>

        </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    <% end %>
