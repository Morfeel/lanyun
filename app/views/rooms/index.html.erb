<div class="table-responsive">
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">房间信息</h4>
    </div>
    <div class="modal-body">
      <table class="table table-hover table-striped">
        <thead>
        <tr>
          <th>#</th>

          <th>Type</th>

          <th>Capacity</th>

          <th>Price</th>


          <th></th>

          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @rooms.each do |room| %>
            <tr>

              <td>
                <%= link_to room.name, room %>
              </td>

              <td>
                <%=  room.room_profile.name %>
              </td>

              <td>
                <%=  room.room_profile.capacity %>
              </td>

              <td>
                <%=  number_to_currency room.room_profile.price %>
              </td>
              <td>
                <%= link_to edit_room_path(room) do %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
              </td>
              <td>
                <%= link_to room, method: :delete, data: {confirm: 'Are you sure?'} do %>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>

        <tfoot>

        </tfoot>
      </table>

    </div>
    <div class="modal-footer">
      <%= link_to 'New Room', new_room_path %>
    </div>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div>
